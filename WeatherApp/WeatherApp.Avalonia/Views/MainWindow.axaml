<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WeatherApp.Avalonia.Views.MainWindow">
  <StackPanel Margin="12" Spacing="8">
    <TextBox x:Name="CityBox" Watermark="e.g. Baku"/>
    <Button Content="Fetch Weather" Click="FetchBtn_OnClick"/>
    <TextBlock x:Name="TempText" FontSize="16" FontWeight="Bold"/>
    <TextBlock x:Name="DescText"/>
    <TextBlock x:Name="ErrorText" Foreground="Red"/>
  </StackPanel>
</Window>
